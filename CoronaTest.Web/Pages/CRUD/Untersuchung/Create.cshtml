@page
@model CoronaTest.Web.Pages.CRUD.Untersuchung.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Neu</h1>

<h4>Test</h4>
<hr />
<p>
    <strong>
        <textarea asp-for="Message" class="text-danger text-center w-full" rows="1" readonly="readonly"></textarea>
    </strong>
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*
            <div class="form-group">
                <label asp-for="Examination.Identifier" class="control-label"></label>
                <input asp-for="Examination.Identifier" class="form-control" />
                <span asp-validation-for="Examination.Identifier" class="text-danger"></span>
            </div>
            *@
            <input type="hidden" asp-for="Examination.Identifier" />

            <label asp-for="Campaigns">Kampagne auswahl</label>
            <div>
                <select asp-for="Kampagne.Id" class="form-control">
                    @foreach (var item in Model.Campaigns)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

            <label asp-for="TestCenters">Testzentrum auswahl</label>
            <div>
                <select asp-for="Testzentrum.Id" class="form-control">
                    @foreach (var item in Model.TestCenters)
                    {
                        <option value="@item.Id">
                            @item.Name @item.City @item.Street
                        </option>
                    }
                </select>
            </div>

            <label asp-for="DateTime">Datum auswahl</label>
            <div>
                <input asp-for="DateTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd\\THH:mm")" />
                <span asp-validation-for="@Model.DateTime" class=" text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
            </div>

            <input type="hidden" asp-for="VerificationIdentifier" />
            <input type="hidden" asp-for="ParticipantId" />

        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
