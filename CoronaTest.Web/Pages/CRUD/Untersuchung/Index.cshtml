@page
@model CoronaTest.Web.Pages.CRUD.Untersuchung.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Meine Test-Resultate</h3>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].ParticipantFullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].ExaminationAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].Identifier)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Examination[0].TestResult)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Examination)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParticipantFullname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExaminationAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identifier)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TestResult)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Löschen</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form class="login100-form validate-form" method="post">
        <div class="container-login100-form-btn p-t-10">
            <input type="submit" value="Profil Einstellungen" class="visible-true" asp-route-id="@Model.ParticipantId">
        </div>
    </form>
</div>