    <UseWPF>true</UseWPF>
    <UserSecretsId>b239ef84-56c5-48e5-8f4d-76b0b254de64</UserSecretsId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MahApps.Metro" Version="2.4.4" />
